<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>

  <!--
    Policy definitions for APK Polkit, a Polkit helper for the Alpine Package Keeper
    Copyright (c) 2020 Rasmus Thomsen <oss@cogitri.dev>
  -->

  <vendor>Rasmus Thomsen</vendor>
  <vendor_url>https://github.com/Cogitri/apk-polkit</vendor_url>
  <icon_name>package-x-generic</icon_name>

  <action id="dev.Cogitri.apkPolkit.Helper.install">
    <!-- SECURITY:
          - Normal users need admin authentication to install packages
          - Users in the "wheel" group can install packages without authentication
     -->
    <description>Install package</description>
    <message>Authentication is required to install package</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.imply">dev.Cogitri.apkPolkit.Helper.update dev.Cogitri.apkPolkit.Helper.upgrade dev.Cogitri.apkPolkit.Helper.delete</annotate>
  </action>

  <action id="dev.Cogitri.apkPolkit.Helper.update">
    <!-- SECURITY:
          - Normal users need admin authentication to update the package database
          - Users in the "wheel" group can update the package databse without authentication
     -->
    <description>Update the package database</description>
    <message>Authentication is required to update the package databse</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.imply">dev.Cogitri.apkPolkit.Helper.install dev.Cogitri.apkPolkit.Helper.upgrade dev.Cogitri.apkPolkit.Helper.delete</annotate>
  </action>

  <action id="dev.Cogitri.apkPolkit.Helper.upgrade">
    <!-- SECURITY:
          - Normal users need admin authentication to upgrade packages
          - Users in the "wheel" group can upgrade packages without authentication
     -->
    <description>Upgrade package</description>
    <message>Authentication is required to upgrade package</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.imply">dev.Cogitri.apkPolkit.Helper.install dev.Cogitri.apkPolkit.Helper.upgrade dev.Cogitri.apkPolkit.Helper.delete</annotate>
  </action>

  <action id="dev.Cogitri.apkPolkit.Helper.delete">
    <!-- SECURITY:
          - Normal users need admin authentication to delete packages
          - Users in the "wheel" group can delete packages without authentication
     -->
    <description>Delete package</description>
    <message>Authentication is required to delete package</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.imply">dev.Cogitri.apkPolkit.Helper.install dev.Cogitri.apkPolkit.Helper.upgrade dev.Cogitri.apkPolkit.Helper.delete</annotate>
  </action>

    <action id="dev.Cogitri.apkPolkit.Helper.listAvailable">
    <!-- SECURITY:
          - Everyone is allowed to list available packages in the database by default. This
            rule is only here so you can restrict this if you so desire.
     -->
    <description>List all available packages</description>
    <message>Authentication is required to list all available packages</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

    <action id="dev.Cogitri.apkPolkit.Helper.listInstalled">
    <!-- SECURITY:
          - Everyone is allowed to list installed packages in the database by default. This
            rule is only here so you can restrict this if you so desire.
     -->
    <description>List all installed packages</description>
    <message>Authentication is required to list all installed packages</message>
    <icon_name>package-x-generic</icon_name>
    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

</policyconfig>
